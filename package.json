{
  "name": "ts-template",
  "version": "0.1.0",
  "description": "TypeScript template project",
  "license": "MIT",
  "author": "taichi",
  "main": "dist/index.js",
  "scripts": {
    "build": "run-s clean lint compile test",
    "bundle": "parcel build src/index.ts --target=node --global main --bundle-node-modules --no-source-maps",
    "clean": "rm -r -f dist",
    "clean:all": "rm -r -f dist .cache",
    "compile": "tsc --project .",
    "lint": "tslint --project .",
    "start": "ts-node src/index.ts",
    "test": "ava",
    "watch": "ava -w"
  },
  "dependencies": {
    "convict": "^5.2.0",
    "dotenv": "^8.2.0",
    "pino": "^5.13.6",
    "pino-pretty": "^3.3.0"
  },
  "devDependencies": {
    "@types/convict": "4.2.1",
    "@types/dotenv": "8.2.0",
    "@types/node": "12.12.14",
    "@types/pino": "5.20.0",
    "@types/prettier": "1.18.3",
    "@types/source-map-support": "0.5.0",
    "ava": "2.4.0",
    "cash-cp": "0.2.0",
    "cash-rm": "0.2.0",
    "cross-env": "6.0.3",
    "npm-check-updates": "3.2.1",
    "npm-run-all": "4.1.5",
    "parcel": "1.12.4",
    "prettier": "1.19.1",
    "sort-package-json": "1.23.1",
    "source-map-support": "0.5.16",
    "ts-node": "8.5.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "6.2.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.7.2",
    "typescript-tslint-plugin": "0.5.5",
    "typesync": "0.6.1"
  },
  "resolutions": {
    "lodash.merge": "^4.6.2",
    "set-value": "2.0.1",
    "mixin-deep": "1.3.2"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "files": [
      "test/**/*.test.ts"
    ],
    "verbose": true
  }
}
